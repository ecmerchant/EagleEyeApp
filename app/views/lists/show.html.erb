<div class="container">
  <div class="page-header" id="banner">
    <div class="row my-4">
      <div class="col-lg-12">
        <h2>出品商品の確認</h2>
        <%= link_to "出品ファイル出力", lists_show_path(format: :csv), class: "btn btn-primary" %>
        <%= link_to "データベース登録", lists_regist_path, class: "btn btn-info", style: "margin-left:30px;" %>
        <br><br>
        <table class="table table-striped table-hover table-bordered" style='width:100%; height: 500px; table-layout:fixed; overflow-y: scroll; overflow-x: scroll;'>
          <thead class="thead-light">
            <% @headers.each do |row| %>
            <tr>
              <% row.each do |col| %>
              <th><%= col %></th>
              <% end %>
            </tr>
            <% end %>
          </thead>
          <tbody>
            <% @body.each do |row| %>
            <tr>
              <% @headers[2].each do |col| %>
              <% if col == 'price' then %>
              <td><%= text_field_tag 'price[' + row['sku'] + ']', row[col], class: 'form-control', style: 'text-align:center;' %></td>
              <% else %>
              <td><%= row[col] %></td>
              <% end %>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

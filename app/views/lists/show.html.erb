<div class="container">
  <div class="page-header" id="banner">
    <div class="row my-4">
      <div class="col-lg-12">
        <h2>出品商品の確認</h2>
        <%= link_to "アマゾン出品ファイル出力", lists_show_path(format: :csv, tag: 'amazon'), class: "btn btn-primary" %>
        <%= link_to "ヤフーショッピング出品ファイル出力", lists_show_path(format: :csv, tag: 'yahoo'), class: "btn btn-primary", style: "margin-left:20px;" %>
        <%= link_to "データベース登録", lists_regist_path, class: "btn btn-info", style: "margin-left:20px;" %>
        <br><br>
        <h5>アマゾン新規出品</h5>
        <div style="height:400px; width: 100%; overflow-y:scroll;">
          <table class="table table-striped table-hover table-bordered ellipsis" id="list_table">
            <thead class="thead-light">
              <% @headers.each do |row| %>
              <tr>
                <% row.each do |col| %>
                <th><%= col %></th>
                <% end %>
              </tr>
              <% end %>
            </thead>
            <tbody>
              <% @body.each do |row| %>
              <tr>
                <% @headers[2].each do |col| %>
                <td><%= row[col] %></td>
                <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <br>
        <h5>ヤフーショッピング出品</h5>
        <div style="height:400px; width: 100%; overflow-y:scroll;">
          <table class="table table-striped table-hover table-bordered ellipsis" id="list_table">
            <thead class="thead-light">
              <% @headers2.each do |row| %>
              <tr>
                <% row.each do |col| %>
                <th><%= col %></th>
                <% end %>
              </tr>
              <% end %>
            </thead>
            <tbody>
              <% @body2.each do |row| %>
              <tr>
                <% @headers2[0].each do |col| %>
                <td><%= row[col] %></td>
                <% end %>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>

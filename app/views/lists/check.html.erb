<div class="container">
  <div class="page-header" id="banner">
    <div class="row my-4">
      <div class="col-lg-12">
        <h2>登録済みデータの確認</h2>

        <div class="form-inline">
          <%= link_to 'テンプレート取得', {:controller => 'lists', :action => 'check', :format => 'xlsx'}, {class: 'btn btn-success', id: 'download_template', style: 'margin-right: 20px;'} %>
          <%= form_tag('/lists/check', method:'post', multipart: true, id:"checkup") do %>
            <div class="form-inline">
              <label style="vertical-align:middle;">
                <span class="btn btn-warning" style="width:180px; margin-left:30px;">
                  登録済みASINの削除
                  <input type="file" name="asin_del" onChange="$('#checkup').submit();" style="display:none">
                </span>
              </label>
            </div>
          <% end %>
        </div>

      </div>
      <div class="col-lg-3">
        <br>
        <table class="table table-striped table-hover table-bordered table-headerfixed" style='width:100%;'>
          <thead class="thead-light">
            <tr>
              <th style='width:100%;'>登録済みASIN</th>
            </tr>
          </thead>
          <tbody>
            <% @asins.each do |asin| %>
            <tr>
              <td style='width:100%;'><%= asin %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="col-lg-3">
        <br>
        <table class="table table-striped table-hover table-bordered table-headerfixed" style='width:100%;'>
          <thead class="thead-light">
            <tr>
              <th style='width:100%;'>登録済みセラーID</th>
            </tr>
          </thead>
          <tbody>
            <% @sellers.each do |seller| %>
            <tr>
              <td style='width:100%;'><%= seller %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>

<div class="container">
  <div class="page-header" id="banner">
    <div class="row my-4">
      <div class="col-lg-12">
        <h2>リサーチ済みデータの確認</h2>
        <div class="form-inline">
          <%= link_to 'テンプレート取得', {:controller => 'lists', :action => 'check', :format => 'xlsx'}, {class: 'btn btn-success', id: 'download_template', style: 'margin-right: 20px;'} %>
          <%= form_tag('/lists/check', method:'post', multipart: true, id:"checkup") do %>
            <div class="form-inline">
              <label style="vertical-align:middle;">
                <span class="btn btn-warning" style="width:210px; margin-left:10px;">
                  リサーチ済み商品の削除
                  <input type="file" name="product_del" onChange="$('#checkup').submit();" style="display:none">
                </span>
              </label>
            </div>
          <% end %>
        </div>
        <br>
        <%= paginate @lists %>
        <div style="height:400px; width: 100%; overflow-y:scroll;">
          <table class="table table-striped table-hover table-bordered ellipsis" id="list_table">
            <thead class="thead-light">
              <tr>
                <% @headers.each do |key, value| %>
                <th><%= value %></th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% if @lists != nil then %>
              <% @lists.each do |list| %>
              <tr>
                <% @headers.each do |key, value| %>
                  <% if list.product != nil then %>
                    <% case key %>
                    <% when :shop_id then %>
                      <td class="align-middle"><%= list.shop.name %></td>
                    <% when :title then %>
                      <td class="align-middle"><%= list.product[key].truncate(40) %></td>
                    <% when :description then %>
                      <td class="align-middle"><%= list.product[key].truncate(50) %></td>
                    <% when :image1, :image2, :image3 then %>
                      <% if list.product[key] != nil then %>
                        <td class="align-middle"><%= image_tag(list.product[key], :size => "60x60") %></td>
                      <% else %>
                        <td class="align-middle"></td>
                      <% end %>
                    <% else %>
                      <td class="align-middle"><%= list.product[key] %></td>
                    <% end %>
                  <% else %>
                    <td class="align-middle"><%= list[key] %></td>
                  <% end %>
                <% end %>
              </tr>
              <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
